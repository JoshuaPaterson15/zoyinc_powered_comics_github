<!--Creating a relative layout to allow the subgroups (e.g. ImageView) to be positioned easily.-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restockinventory_activity_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background_colour"
    android:orientation="vertical"
    tools:context=".RestockInventoryActivity">

    <!--Creating a ScrollView giving users the ability to scroll down the page if it is required. -->
    <ScrollView
        android:id="@+id/restockinventory_activity_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--Creating a linear layout allowing subgroups in this layout to align in a single direction (either vertically or horizontally).-->
        <LinearLayout
            android:id="@+id/restockinventory_activity_linear_layout_for_logo_and_welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Creating an imageview allowing the application to display a specified image with the set properties below.-->
            <ImageView
                android:id="@+id/restockinventory_activity_zoyinc_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/zoyinc_powered_comics_logo_description"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/zoyincpoweredcomics_logo" />

            <!--Creating a textview allowing the application to display set text with the set properties below.-->
            <TextView
                android:id="@+id/restockinventory_activity_main_heading"
                android:text="@string/restock_activity_main_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <!--Creating a linear layout allowing subgroups in this layout to align in a single direction (either vertically or horizontally).-->
            <LinearLayout
                android:id="@+id/restockinventory_activity_linear_layout_for_all_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <!--Creating a linear layout allowing subgroups in this layout to align in a single direction (either vertically or horizontally).-->
                <LinearLayout
                    android:id="@+id/restockinventory_activity_linear_layout_for_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <!--Creating a textview allowing the application to display set text with the set properties below.-->
                    <TextView
                        android:id="@+id/restockinventory_activity_item_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/item_list_background"
                        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                        android:textSize="15dp" />

                    <!--Creating a button allowing the application to display a set button with the set properties below.-->
                    <Button
                        android:id="@+id/restockinventory_activity_item_1_issue_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/primary_button_background"
                        android:text="@string/restock_inventory_btn_name"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!--Creating a linear layout allowing subgroups in this layout to align in a single direction (either vertically or horizontally).-->
                <LinearLayout
                    android:id="@+id/restockinventory_activity_linear_layout_for_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <!--Creating a textview allowing the application to display set text with the set properties below.-->
                    <TextView
                        android:id="@+id/restockinventory_activity_item_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/item_list_background"
                        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                        android:textSize="15dp" />

                    <!--Creating a button allowing the application to display a set button with the set properties below.-->
                    <Button
                        android:id="@+id/restockinventory_activity_item_2_issue_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/primary_button_background"
                        android:text="@string/restock_inventory_btn_name"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!--Creating a linear layout allowing subgroups in this layout to align in a single direction (either vertically or horizontally).-->
                <LinearLayout
                    android:id="@+id/restockinventory_activity_linear_layout_for_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <!--Creating a textview allowing the application to display set text with the set properties below.-->
                    <TextView
                        android:id="@+id/restockinventory_activity_item_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/item_list_background"
                        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                        android:textSize="15dp" />

                    <!--Creating a button allowing the application to display a set button with the set properties below.-->
                    <Button
                        android:id="@+id/restockinventory_activity_item_3_issue_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/primary_button_background"
                        android:text="@string/restock_inventory_btn_name"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--Creating a toolbar widget to display a toolbar/navigation bar at the bottom of the page to help users navigate them-selves around the application.-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_toolbar_background"
        android:paddingTop="5dp">

        <!--Creating an image button (a button displayed as an image) for the toolbar so the application can respond when the user taps the image.-->
        <ImageButton
            android:id="@+id/restockinventory_activity_login_successful_page_btn"
            android:src="@drawable/home_icon"
            android:background="@drawable/bottom_toolbar_buttons_background"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <!--Creating an image button (a button displayed as an image) for the toolbar so the application can respond when the user taps the image.-->
        <ImageButton
            android:id="@+id/restockinventory_activity_restock_inventory_page_btn"
            android:src="@drawable/restock_icon"
            android:background="@drawable/bottom_toolbar_buttons_background"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!--Creating an image button (a button displayed as an image) for the toolbar so the application can respond when the user taps the image.-->
        <ImageButton
            android:id="@+id/restockinventory_activity_issue_books_page_btn"
            android:src="@drawable/issue_book_icon"
            android:background="@drawable/bottom_toolbar_buttons_background"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:paddingRight="10dp"
            android:scaleType="fitCenter" />

        <!--Creating an image button (a button displayed as an image) for the toolbar so the application can respond when the user taps the image.-->
        <ImageButton
            android:id="@+id/restockinventory_activity_return_books_page_btn"
            android:src="@drawable/return_book_icon"
            android:background="@drawable/bottom_toolbar_buttons_background"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <!--Creating an image button (a button displayed as an image) for the toolbar so the application can respond when the user taps the image.-->
        <ImageButton
            android:id="@+id/restockinventory_activity_view_account_page_btn"
            android:src="@drawable/user_profile_icon"
            android:background="@drawable/bottom_toolbar_buttons_background_circular"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>